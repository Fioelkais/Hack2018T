<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thibault.tempname.RiskLevel">

    <ImageView
        android:id="@+id/goodImage"
        android:layout_width="287dp"
        android:layout_height="243dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/happy_cow"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="37dp" />

    <Button
        android:id="@+id/toContact"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:onClick="goToContact"
        android:text="Learn More"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="447dp" />

    <ImageView
        android:id="@+id/avgImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/avg_cow"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/badImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sad_cow"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/terribleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/terrible_cow"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="0dp" />

</android.support.constraint.ConstraintLayout>
